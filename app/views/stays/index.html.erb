<div data-controller="stays-form">
  <%= form_with url: trip_stays_path(@trip), method: :post, html: { class: "mb-4", data: { action: "submit->stays-form#searchLocation" } } do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.text_field :query, class: "form-control", placeholder: "Look for a hotel", value: params[:query], data: { stays_form_target: "input" } %>
  <% end %>

  <div>
    <ul class="hotellist">
      <!-- Use an empty <li> element as a placeholder for the links -->
      <li data-target="stays-form.listItem"></li>
    </ul>
  </div>
</div>
